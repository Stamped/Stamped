/* **************************************************************************
                         CUSTOM COLOR SCHEME SETUP
   ************************************************************************** */

{{#user}}
@user_primary:   #{{color_primary}};   /* #004ab2 */
@user_secondary: #{{color_secondary}}; /* #0057d1 */
{{/user}}

/*
@l0: hue(hsl(lightness(@user_primary), 0, 0));
@l1: hue(hsl(lightness(@user_secondary), 0, 0));

@user_light: color(`(@{l0} >  @{l1} ? "@{user_primary}" : "@{user_secondary}")`);
@user_dark:  color(`(@{l0} <= @{l1} ? "@{user_primary}" : "@{user_secondary}")`);

@primary:   fade(lighten(@user_light, 25%), 80%);
@secondary: fade(darken( @user_dark,  10%), 80%);
*/

@primary:   @user_primary;
@secondary: @user_primary;


/* **************************************************************************
                         CUSTOM COLOR SCHEME RULES
   ************************************************************************** */


.user-gradient2(@angle: 135deg, @c0, @c1) {
    
    background: -webkit-linear-gradient(@angle, @c0, @c1);
    background: -moz-linear-gradient(@angle, @c0, @c1);
    background: -o-linear-gradient(@angle, @c0, @c1);
    background: linear-gradient(@angle, @c0, @c1);
}

.user-gradient(@angle: 135deg, @a: 50%) {
    .user-gradient2(@angle, fade(@primary, @a), fade(@secondary, @a));
}


.post-header, .stamp-card-pre {
    .user-gradient(135deg);
    
    width:  100%;
    margin: 0;
}

.profile-header-post, .stamp-card-post {
    .user-gradient(135deg);
    
    width:  100%;
    margin: 0;
    
    .stamp-count {
        color: @user_primary;
    }
}

.profile-header-wrapper {
    .profile-header {
        .user-gradient(135deg);
    }
}

#stamp-category-nav-bar {
    ol {
        li.default a:active .icon, 
        li.place a:active .icon, 
        li.music a:active .icon, 
        li.book a:active .icon, 
        li.film a:active .icon, 
        li.other a:active .icon {
            background-color: fade(@secondary, 100%);
        }
    }
}

body.default    #stamp-category-nav-bar ol li.default .icon, 
body.place      #stamp-category-nav-bar ol li.place .icon, 
body.music      #stamp-category-nav-bar ol li.music .icon, 
body.book       #stamp-category-nav-bar ol li.book .icon, 
body.film       #stamp-category-nav-bar ol li.film .icon, 
body.other      #stamp-category-nav-bar ol li.other .icon {
    background-color: fade(@secondary, 100%);
}

.user-logo-large {
    {{#user}}
    background: url(http://static.stamped.com/logos/{{color_primary}}-{{color_secondary}}-logo-195x195.png);
    {{/user}}
}

.user-logo-small {
    {{#user}}
    background: url(http://static.stamped.com/logos/{{color_primary}}-{{color_secondary}}-email-36x36.png);
    {{/user}}
    
    width:  36px;
    height: 36px;
}

.stamp-gallery-item:hover {
    background-color: fade(@primary, 15%);
}

.stamp-gallery-item:active {
    background-color: fade(@primary, 25%);
}

